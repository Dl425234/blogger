<%= form_for( @post, html: {multipart: true}) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title%><br>
    <br>
    <%=f.label :body %><br>
    <%=f.text_area :body %><br>
    <br>
    <% if @post.image.exists? %>
      <%= image_tag @post.image.url %><br/>
      
    <% end %>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>
    <p>
      <%= f.label :tag_list %><br>
      <%= f.text_field :tag_list %>
    </p>
    <br>
    <%= f.submit %><br>
    
    
<% end %>